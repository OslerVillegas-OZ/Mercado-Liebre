<!DOCTYPE html>
<html lang="en">
<head>
	<%- include('./blocks/meta') %>
	<title>MercadoLiebre - Registro</title>
	<%- include('./blocks/head-links') %>
</head>
<body>
	<header>
		<%- include('./blocks/header-top') %>
		<%- include('./blocks/header-bottom') %>

		<!-- Top Navigation Menu-->
		<%- include('./blocks/menu-top') %>
	</header>
	<main>
		<form action="#" method="">
			<div class="user-info">
				<div class="form-name">
					<label for="name">Nombre:</label>
					<input type="text" id="name" name="name" minlength="5">
					<span class="form-error"></span>
				</div>
				<div class="form-surname">
					<label for="surname">Apellido:</label>
					<input type="text" id="surname" name="surname" minlength="5">
					<span class="form-error"></span>
				</div>
				<div class="form-user">
					<label for="user">Nomre de usuario:</label>
					<input type="text" id="user" name="user">
					<span class="form-error"></span>
				</div>
				<div class="form-dob">
					<label for="dob">Fecha de Nacimiento:</label>
					<input type="date" id="dob" name="dob">
					<span class="form-error"></span>
				</div>
				<div class="form-address">
					<label for="address">Domicilio:</label>
					<input type="text" id="address" name="address">
					<span class="form-error"></span>
				</div>
				<div class="form-select">
					<label for="profiley-type">Perfil del usuario:</label>
					<select name="profile-type">
						<option value="comprar">Comprar</option>
						<option value="vender">Vender</option>
					</select>
					<span class="form-error"></span>
				</div>
				<div class="form-checkbox">
					<label for="hobby">Hobbies:</label>
					<div class="form-checkbox-inputs">
						<input type="checkbox" name="electro" id="electro" value="Electro">
						<label name="hobby">Electro</label>
						<input type="checkbox" name="moda" id="moda" value="Moda">
						<label name="hobby">Moda</label>
						<input type="checkbox" name="hogar" id="hogar" value="Hogar">
						<label name="hobby">Hogar</label>
						<input type="checkbox" name="jugueteria" id="jugueteria" value="Juguetería">
						<label name="hobby">Juguetería</label>
						<input type="checkbox" name="vida-sana" id="vida-sana" value="Vida Sana">
						<label name="hobby">Vida Sana</label>
					</div>
				
					<span class="form-error"></span>
				</div>
				<div class="form-avatar">
					<label for="avatar">Foto de usuario</label>
					<input type="file" name="avatar">
					<span class="form-error"></span>
				</div>
				<div class="form-password">
						<label for="password">Contraseña:</label>
				<input type="pass" name="password" id="password">
				<span class="form-error"></span>
				</div>
				<div class="form-password">
					<label for="password-confirm">Confirmar Contraseña:</label>
					<input type="pass" name="password-confirm" id="password-confirm">
					<span class="form-error"></span>
				</div>
			</div>
			<div class="button-action">
				<button type="reset" id="borrar">Borrar</button>
				<button type="submit" id="submit">Enviar</button>
			</div>
		</form>
	</main>
	<footer>
		<%- include('./blocks/menu-footer') %>
	</footer>
</body>
</html>